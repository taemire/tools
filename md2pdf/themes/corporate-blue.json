            ]
        },
        "copyright": {
            "position": {
                "x": 40,
                "y": 780
            },
            "fontSize": 12,
            "color": "text.light",
            "template": "¬© {{year}} {{copyright}}. All Rights Reserved."
        }
    },
    "toc": {
        "enabled": true,
        "title": {
            "text": "üìã Î™©Ï∞®",
            "fontSize": 24,
            "color": "primary"
        },
        "background": {
            "enabled": true,
            "color": "background.alt",
            "padding": 20,
            "borderRadius": 12
